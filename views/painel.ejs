<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Painel Multiversespark</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>🌐 Subdomínios ativos</h2>
      <form method="POST" action="/logout">
        <button class="btn btn-outline-light">Sair</button>
      </form>
    </div>

    <table class="table table-dark table-bordered">
      <thead>
        <tr><th>#</th><th>Hostname</th><th>Ação</th></tr>
      </thead>
      <tbody>
        <% hostnames.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.hostname %></td>
            <td>
              <form method="POST" action="/painel/remove">
                <input type="hidden" name="index" value="<%= index %>">
                <button type="submit" class="btn btn-sm btn-danger">Remover</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <hr>

    <h4>➕ Adicionar novo subdomínio</h4>
    <form method="POST" action="/painel/add" class="d-flex gap-2 mb-4">
      <input type="text" name="subdomain" class="form-control" placeholder="ex: painel" required>
      <button class="btn btn-success">Adicionar</button>
    </form>

    <form method="POST" action="/painel/restart">
      <button type="submit" class="btn btn-warning w-100">🔁 Reiniciar Túnel</button>
    </form>
  </div>
</body>
</html>
